{
  "id": "sacred-home-hero",
  "content": {
    "eyebrow": "Champagne Dentistry",
    "headline": "Advanced cosmetic dentistry crafted with calm precision.",
    "subheadline": "Digital workflows, gentle clinicians, and beautifully layered studio light for confident smiles.",
    "cta": { "label": "Book a consultation", "href": "/book" },
    "secondaryCta": { "label": "Explore treatments", "href": "/treatments" }
  },
  "defaults": {
    "tone": "night",
    "surfaces": {
      "gradient": "base.gradientField",
      "waveMask": { "desktop": "base.waveMask", "mobile": "base.waveMask.mobile" },
      "background": { "desktop": "base.waveField", "mobile": "base.waveField" },
      "overlays": { "dots": "base.dotsTexture", "field": "base.waveFieldLines" },
      "particles": "fx.particlesPrimary",
      "grain": { "desktop": "overlay.filmGrain", "mobile": "overlay.filmGrain.mobile" },
      "motion": ["fx.caustics", "fx.glass", "fx.goldDust", "fx.particleDrift"],
      "video": "heroVideo"
    },
    "layout": {
      "contentAlign": "start",
      "maxWidth": 960,
      "verticalOffset": "0px",
      "padding": "clamp(2rem, 4vw, 3.5rem)"
    },
    "motion": {
      "parallaxDepth": 18,
      "shimmerIntensity": 1,
      "particleDrift": 1,
      "energyMode": "balanced",
      "particles": { "density": 1, "speed": 1, "curve": "sway" }
    },
    "filmGrain": { "enabled": true, "opacity": 0.32 }
  }
}
