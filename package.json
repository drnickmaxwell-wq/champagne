{
  "name": "champagne-core",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:all": "turbo run dev --parallel --filter=./apps/*",
    "build": "turbo run build",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "eslint": "^9.14.0",
    "typescript-eslint": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@eslint/js": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-next": "^0.0.0",
    "globals": "^15.11.0",
    "turbo": "^2.3.0",
    "prettier": "^3.4.2",
    "@types/node": "^22.9.1"
  }
}
