{
  "name": "champagne-core",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:engine": "pnpm --filter engine dev",
    "dev:all": "pnpm run dev:web",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm exec tsc --noEmit -p tsconfig.base.json",
    "build:web": "pnpm --filter web build",
    "guard:hero": "pnpm --filter @champagne/guards guard:hero",
    "guard:rogue-hex": "pnpm --filter @champagne/guards guard:rogue-hex",
    "guard:canon": "pnpm --filter @champagne/guards guard:canon",
    "guard:cta-single-terminal": "pnpm --filter @champagne/guards guard:cta-single-terminal",
    "guard:cta-contract": "pnpm --filter @champagne/guards guard:cta-contract",
    "guard:all": "pnpm --filter @champagne/guards guard:all",
    "guard:workspace-deps": "node scripts/guard-workspace-deps.mjs",
    "hero:fit:sacred": "node scripts/hero_fit_sacred.mjs",
    "hero:match:sacred": "pnpm exec playwright install --with-deps chromium && node scripts/hero_match_sacred.mjs",
    "verify": "node scripts/verify-token-purity.cjs && pnpm run guard:workspace-deps && pnpm run guard:all && pnpm run lint && pnpm run typecheck && CI=1 pnpm run build:web",
    "export:page-truth": "node scripts/export-page-truth.mjs",
    "guard:stock-canon": "node scripts/guard-stock-canon.mjs",
    "guard:no-phi-logs-stock": "node scripts/guard-no-phi-logs-stock.mjs"
  },
  "dependencies": {
    "framer-motion": "^11.11.17",
    "lucide-react": "^0.468.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.15.0",
    "playwright": "^1.57.0",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.1"
  }
}
